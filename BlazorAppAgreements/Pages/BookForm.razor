@page "/bookform"
@inherits ListaBooksBase
@inject NavigationManager NavigationManager

@using Models
<h3>Agregar Libro</h3>

<EditForm Model="oBook">
    <div class="container-fluid">
        <div class="form-group row mb-1">
            <label class="col-sm-3">Titulo</label>
            <div class="col-sm-9">
                <InputText class="form-control" @bind-Value="@oBook.Titulo"></InputText>
            </div>
        </div>
        <div class="form-group row mb-1">
            <label class="col-sm-3">Año de Publicación</label>
            <div class="col-sm-9">
                <InputNumber class="form-control" @bind-Value="@oBook.Año"></InputNumber>
            </div>
        </div>
        <div class="form-group row mb-1">
            <label class="col-sm-3">Genero</label>
            <div class="col-sm-9">
                <InputText class="form-control" @bind-Value="@oBook.Genero"></InputText>
            </div>
        </div>
        <div class="form-group row mb-1">
            <label class="col-sm-3">Id Autor</label>
            <div class="col-sm-9">
                <InputNumber class="form-control" @bind-Value="@oBook.AutorId"></InputNumber>
            </div>
        </div>
        <div class="form-group row mb-1">
            <div class="col-sm-12">
                <button class="btn btn-primary" @onclick="Save">Guardar</button>
            </div>
        </div>

    </div>
</EditForm>

@code {
    Autor oAutor = new Autor();
    Book oBook = new Book();
    [Parameter]
    public int BookId { get; set; }

    private async Task Save()
    {
        await ServicioBooks.PostBooks(oBook);
        NavigationManager.NavigateTo("/vistalibro");

    }
}